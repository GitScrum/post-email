{
  "name": "post-email",
  "version": "0.0.0",
  "description": "Builder email using poshtml & postcss",
  "license": "MIT",
  "repository": "post/post-email",
  "homepage": "https://github.com/post/post-email#readme",
  "bugs": "post/post-email/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "html": "posthtml -o dev/ -i src/*.html",
    "css": "postcss -o dev/css/main.css src/css/main.css -c postcss.json && npm run cssmin",
    "cssmin": "postcss -o dev/css/main.min.css dev/css/main.css -u postcss-devtools -u postcss-csso -u postcss-discard-comments --postcss-discard-comments.removeAll true",
    "build": "npm run css && npm run html",
    "watch": "chokidar src/**/* -c \"npm run build\"",
    "server": "browser-sync start --server dev --files dev",
    "dev": " npm run server | npm run watch",
    "update": "updtr"
  },
  "keywords": [
    "posthtml",
    "postcss",
    "css",
    "html",
    "email",
    "builder"
  ],
  "posthtml": {
    "modules": {
      "root": "./src/"
    },
    "inlineAssets": {
      "from": "dev/index.html"
    },
    "removeTags": {
      "tags": "style"
    },
    "removeAttributes": "class"
  },
  "dependencies": {
    "normalize.css": "^7.0.0",
    "perfectionist": "^2.4.0",
    "postcss-at-rules-variables": "0.1.1",
    "postcss-cli": "^6.0.0",
    "postcss-calc": "^6.0.0",
    "postcss-conditionals": "^2.1.0",
    "postcss-csso": "^2.0.0",
    "postcss-custom-properties": "^6.0.0",
    "postcss-devtools": "^1.1.1",
    "postcss-discard-comments": "^2.0.4",
    "postcss-each": "^0.10.0",
    "postcss-easy-import": "^2.0.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^2.0.2",
    "posthtml-beautify": "0.1.6",
    "posthtml-cli": "^0.4.0",
    "posthtml-inline-assets": "^2.0.0",
    "posthtml-inline-css": "^1.2.2",
    "posthtml-modules": "^0.4.0",
    "posthtml-remove-attributes": "^1.0.0",
    "posthtml-remove-tags": "0.1.0",
    "reset.css": "^2.0.2"
  },
  "devDependencies": {
    "browser-sync": "^2.18.11",
    "chokidar-cli": "^1.2.0",
    "updtr": "^1.0.0"
  }
}
